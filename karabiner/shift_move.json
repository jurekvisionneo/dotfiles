{
  "description": "Shifts Move Forward and Backward by 1 word",
  "manipulators": [
    {
      "from": { "key_code": "right_shift" },
      "to": [{ "key_code": "right_shift" }],
      "to_if_alone": [
        {
          "key_code": "right_arrow",
          "modifiers": ["option"]
        }
      ],
      "type": "basic"
    },
    {
      "from": { "key_code": "left_shift" },
      "to": [{ "key_code": "left_shift" }],
      "to_if_alone": [
        {
          "key_code": "left_arrow",
          "modifiers": ["option"]
        }
      ],
      "type": "basic"
    }
  ]
}
